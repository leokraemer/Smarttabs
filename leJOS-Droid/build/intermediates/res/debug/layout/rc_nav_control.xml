<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:id="@+id/root">

		<SeekBar
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/vl"
			android:layout_column="1"
			android:layout_weight="1"
			android:progress="500"
			android:padding="20dp"
			android:indeterminate="false"
			android:max="1000"
			android:layout_alignParentTop="true"
			android:layout_alignParentEnd="true"
			android:thumb="@drawable/controllermitte"
			android:maxHeight="75dp" />


	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="Large Text"
			android:id="@+id/mMessage"
			android:padding="20dp"
			android:layout_gravity="top"
			android:layout_column="1"
			android:layout_alignParentBottom="true"
		android:layout_alignParentEnd="false" />

	<FrameLayout
		android:layout_width="300dp"
		android:layout_height="300dp"
		android:layout_alignParentTop="true"
		android:background="@drawable/controllerrand"
		android:id="@+id/gamepad">

		<ImageView
			android:layout_width="75dp"
			android:layout_height="75dp"
			android:id="@+id/knob"
			android:layout_gravity="center"
			android:background="@drawable/controllermitte" />
	</FrameLayout>

	<SeekBar
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/speedSlider"
		android:layout_below="@+id/gamepad"
		android:layout_alignParentStart="true"
		android:max="1500"
		android:indeterminate="false" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="Speed"
		android:id="@+id/textView"
		android:layout_below="@+id/speedSlider"
		android:layout_alignParentStart="true"
		android:layout_marginRight="20dp" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="0"
		android:id="@+id/speedTextView"
		android:layout_below="@+id/speedSlider"
		android:layout_toEndOf="@+id/textView" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="NXT24"
		android:id="@+id/nxt24"
		android:layout_above="@+id/mMessage"
		android:layout_alignParentStart="true" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="WineTittler"
		android:id="@+id/winetittler"
		android:layout_alignTop="@+id/nxt24"
		android:layout_toEndOf="@+id/nxt24" />

</RelativeLayout><!-- From: file:/C:/Users/leo/Android%20Studio%20Projects/Smatttabs/leJOS-Droid/res/layout/rc_nav_control.xml -->